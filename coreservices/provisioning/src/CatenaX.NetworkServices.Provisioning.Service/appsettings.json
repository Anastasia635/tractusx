{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Provisioning": {
    "TriggerGroup": "Onboarding",
    "ClientId": "urn:federation:MicrosoftOnline",
    "CertAttribute": "saml.signing.certificate",
    "DomainBase": ""
  },
  "ActiveDirectory": {
    "Client": {
      "Authority": "",
      "ClientId": "",
      "ClientSecret": ""
    },
    "Federation": {
      "RequestUri": "https://graph.microsoft.com/beta/directory/federationConfigurations/graph.samlOrWsFedExternalDomainFederation",
      "Request": {
        "ODataType": "microsoft.graph.samlOrWsFedExternalDomainFederation",
        "IssuerUri": "https://{base}/auth/realms/{realm}",
        "DisplayName": "{realm}",
        "MetadataExchangeUri": "https://{base}/auth/realms/{realm}/metadataExchangeUri",
        "PassiveSignInUri": "https://{base}/auth/realms/{realm}/protocol/saml",
        "PreferredAuthenticationProtocol": "saml",
        "Domains": [
          {
            "ODataType": "microsoft.graph.externalDomainName",
            "Id": "{realm}.{base}"
          }
        ],
        "SigningCertificate": "{cert}"
      }
    }
  },
  "KeyCloak": {
    "ConnectionString": "",
    "User": "",
    "Password": "",
    "AuthRealm": "master"
  },
  "MailingService": {
    "Provider": {
      "SmtpHost": "",
      "SmtpUser": "",
      "SmtpPassword": ""
    },
    "Templates": {
      "federationcreated": {
        "Subject": "invitation to Catena-X",
        "Body": "Hello {firstname} {lastname}, you have been onboarded to Catena-X realm '{realm}'"
      }
    },
    "UserEmail": {
      "SenderEmail": "",
      "Template": "federationcreated"
    }
  }
}
